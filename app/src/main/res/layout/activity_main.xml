<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#4A8460"
    android:padding="24dp">

    <!-- Card container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_card_background"
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="6dp">

        <!-- Coffee Shop Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee"
            android:textSize="20sp"
            android:textColor="#4A8460"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop"
            android:textSize="20sp"
            android:textColor="#4A8460"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4A8460"
            android:layout_marginTop="8dp" />

        <!-- Username -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your username"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background_normal"
            android:inputType="textEmailAddress" />

        <!-- Password -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your password"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background_normal"
            android:inputType="textPassword" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4A8460"
            android:textColor="#FFFFFF" />

        <!-- Google Login & Forgot Password -->
        <!-- Google Login & Forgot Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <!-- Or with + Google icon (gáº§n nhau) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or with:"
                    android:textColor="#555555"
                    android:layout_marginEnd="6dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/google_logo"
                    android:contentDescription="Google login" />
            </LinearLayout>

            <!-- Forgot password -->
            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="100dp"
                android:text="Forgot password?"
                android:textColor="#555555" />
        </LinearLayout>


        <!-- Register -->
        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register new account"
            android:textColor="#D32F2F"
            android:layout_marginTop="12dp"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>
